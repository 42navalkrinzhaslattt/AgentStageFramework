# Environment variables template for Emergent World Engine
# Copy this file to .env and fill in your actual values

# ===========================================
# THETA EDGECLOUD CONFIGURATION
# ===========================================

# Theta EdgeCloud API endpoint
THETA_ENDPOINT=https://api.thetaedgecloud.com

# Your Theta EdgeCloud API key (required)
# Get this from your Theta EdgeCloud dashboard
THETA_API_KEY=your_theta_api_key_here

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis password (optional, leave empty for no password)
REDIS_PASSWORD=

# ===========================================
# SERVICE PORTS (Optional overrides)
# ===========================================

# Director Service gRPC port
DIRECTOR_SERVICE_PORT=50051

# NPC Service gRPC port
NPC_SERVICE_PORT=50052

# Narrative Service gRPC port
NARRATIVE_SERVICE_PORT=50053

# Asset Service gRPC port
ASSET_SERVICE_PORT=50054

# ===========================================
# MONITORING CONFIGURATION (Optional)
# ===========================================

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode
DEBUG_MODE=false

# ===========================================
# AI MODEL CONFIGURATION
# ===========================================

# Default models for different services
# These can be overridden per service if needed

# Primary reasoning model (Director Service)
PRIMARY_LLM_MODEL=deepseek_r1

# Dialogue model (NPC Service)
DIALOGUE_LLM_MODEL=deepseek_r1

# Text-to-Speech model (NPC Service)
TTS_MODEL=kokoro-82m

# Vision model (NPC Service)
VISION_MODEL=grounding-dino

# Image generation model (Asset Service)
IMAGE_MODEL=flux.1-schnell

# Video generation model (Asset Service)
VIDEO_MODEL=stable-diffusion-video

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Request timeout for AI model calls (seconds)
AI_REQUEST_TIMEOUT=120

# Maximum concurrent AI requests per service
MAX_CONCURRENT_REQUESTS=10

# Redis connection pool size
REDIS_POOL_SIZE=10

# gRPC message size limits (bytes)
GRPC_MAX_MESSAGE_SIZE=104857600